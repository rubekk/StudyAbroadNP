---
import Layout from "../../layouts/Layout.astro";
import type { GetStaticPaths } from "astro";
import {
    getAllUniversities,
    getUniversityBySlug,
} from "../../lib/fetch/universities";

export const getStaticPaths = (async () => {
    try {
        const universitiesData = await getAllUniversities();
        if (universitiesData.error) {
            return [];
        }
        return (
            universitiesData.data?.map((university) => ({
                params: { slug: university.slug },
                props: { lastUpdated: new Date().toISOString() },
            })) || []
        );
    } catch (error) {
        return [];
    }
}) satisfies GetStaticPaths;

const { slug } = Astro.params;
const universityRes = await getUniversityBySlug(slug);
const university = universityRes.data;

// Get other universities for sidebar
const allUniversitiesRes = await getAllUniversities();
const otherUniversities = allUniversitiesRes.data
    ?.filter((u) => u.slug !== slug)
    .slice(0, 6) || [];

const pageTitle = `${university?.name} - Programs, Fees & Admission 2025 | StudyAbroadNp`;
const pageDescription = `Study at ${university?.name} in ${university?.city}, ${university?.country}. Explore programs, tuition fees, and admission requirements.`;
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="university-detail-page">
        <div class="content-container">
            <div class="detail-layout">
                <!-- Main Content -->
                <main class="main-content">
                    <!-- University Header -->
                    <div class="university-header">
                        <div class="university-image">
                            <img
                                src={university?.image_url || "/images/university-default.jpg"}
                                alt={university?.name}
                            />
                        </div>
                        <div class="university-info">
                            <span class="location">{university?.city}, {university?.country}</span>
                            <h1>{university?.name}</h1>
                            
                            <div class="key-stats">
                                <div class="stat">
                                    <span class="stat-label">Programs</span>
                                    <span class="stat-value">{university?.degrees.length}+</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Tuition (yearly)</span>
                                    <span class="stat-value">${university?.min_fee}K - ${university?.max_fee}K</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">Duration</span>
                                    <span class="stat-value">{university?.min_duration}-{university?.max_duration} Years</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Info -->
                    <div class="info-cards">
                        <div class="info-card">
                            <h3>Intake Periods</h3>
                            <p>{university?.time?.join(", ") || "Multiple intakes"}</p>
                        </div>
                        <div class="info-card">
                            <h3>Accepted Tests</h3>
                            <p>{university?.acceptedExams?.join(", ")}</p>
                        </div>
                        {university?.scholarships && university.scholarships.length > 0 && (
                            <div class="info-card">
                                <h3>Scholarships</h3>
                                <p>{university.scholarships.length} Available</p>
                            </div>
                        )}
                    </div>

                    <!-- About Section -->
                    <section class="detail-section">
                        <h2>About {university?.name}</h2>
                        <p>
                            <strong>{university?.name}</strong> is a distinguished educational institution located in {university?.city}, {university?.country}. 
                            With {university?.degrees.length} comprehensive degree programs, the university caters to diverse academic interests and career aspirations.
                        </p>
                        <p>
                            The institution offers programs with tuition fees ranging from ${university?.min_fee},000 to ${university?.max_fee},000 annually, 
                            with flexible study durations from {university?.min_duration} to {university?.max_duration} years.
                        </p>
                    </section>

                    <!-- Programs Section -->
                    <section class="detail-section">
                        <h2>Academic Programs</h2>
                        <div class="programs-list">
                            {university?.degrees.map((degree) => (
                                <div class="program-item">
                                    <h4>{degree}</h4>
                                    <div class="program-meta">
                                        <span>{university?.min_duration}-{university?.max_duration} years</span>
                                        <span>${university?.min_fee}K-${university?.max_fee}K/year</span>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </section>

                    <!-- Specializations -->
                    {university?.specializations && university.specializations.length > 0 && (
                        <section class="detail-section">
                            <h2>Areas of Specialization</h2>
                            <div class="tags-list">
                                {university.specializations.map((spec) => (
                                    <span class="tag">{spec}</span>
                                ))}
                            </div>
                        </section>
                    )}

                    <!-- Admission Requirements -->
                    <section class="detail-section">
                        <h2>Admission Requirements</h2>
                        
                        <div class="requirement-block">
                            <h3>Entrance Exams</h3>
                            <div class="tags-list">
                                {university?.acceptedExams.map((exam) => (
                                    <span class="tag exam-tag">{exam}</span>
                                ))}
                            </div>
                        </div>

                        <div class="requirement-block">
                            <h3>Required Documents</h3>
                            <ul>
                                <li>Academic transcripts</li>
                                <li>English proficiency test scores</li>
                                <li>Personal statement</li>
                                <li>Letters of recommendation</li>
                                <li>Valid passport copy</li>
                            </ul>
                        </div>
                    </section>

                    <!-- Scholarships -->
                    {university?.scholarships && university.scholarships.length > 0 && (
                        <section class="detail-section">
                            <h2>Available Scholarships</h2>
                            <ul class="scholarships-list">
                                {university.scholarships.map((scholarship) => (
                                    <li>{scholarship}</li>
                                ))}
                            </ul>
                        </section>
                    )}
                </main>

                <!-- Sidebar -->
                <aside class="sidebar">
                    <div class="sidebar-sticky">
                        <!-- Contact Card -->
                        <div class="sidebar-card">
                            <h3>Get Information</h3>
                            <p>Connect with our advisors for personalized guidance</p>
                            
                            <form class="contact-form">
                                <input type="text" placeholder="Full Name" required />
                                <input type="email" placeholder="Email Address" required />
                                <input type="tel" placeholder="Phone Number" />
                                <select>
                                    <option value="">Select Program</option>
                                    {university?.degrees.map((degree) => (
                                        <option value={degree}>{degree}</option>
                                    ))}
                                </select>
                                <textarea placeholder="Your Message" rows="3"></textarea>
                                <button type="submit" class="btn-primary">Send Inquiry</button>
                            </form>
                        </div>

                        <!-- Other Universities -->
                        <div class="sidebar-card">
                            <h3>Other Universities</h3>
                            <div class="other-universities">
                                {otherUniversities.map((uni) => (
                                    <a href={`/universities/${uni.slug}`} class="university-mini-card">
                                        <img src={uni.image_url || "/images/university-default.jpg"} alt={uni.name} />
                                        <span>{uni.name}</span>
                                    </a>
                                ))}
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</Layout>

<style lang="scss">
@use '../../styles/variables' as *;

.university-detail-page {
    min-height: 100vh;
    background: white;
    padding: 2rem 0;
}

.content-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 3rem);
}

.detail-layout {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 2.5rem;

    @media (max-width: 1024px) {
        grid-template-columns: 1fr;
    }
}

/* Main Content */
.main-content {
    min-width: 0;
}

.university-header {
    margin-bottom: 2rem;

    .university-image {
        width: 100%;
        height: 300px;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 1.5rem;

        img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    }

    .university-info {
        .location {
            display: inline-block;
            padding: 0.4rem 0.8rem;
            background: #e0f2fe;
            color: $primary-color;
            border-radius: 4px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        h1 {
            font-size: clamp(1.75rem, 4vw, 2.5rem);
            color: $text-primary-color;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }
    }

    .key-stats {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;

        .stat {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;

            .stat-label {
                font-size: 0.85rem;
                color: $text-gray;
            }

            .stat-value {
                font-size: 1.1rem;
                font-weight: 700;
                color: $text-primary-color;
            }
        }
    }
}

.info-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2.5rem;

    .info-card {
        padding: 1.25rem;
        background: #f9fafb;
        border-radius: 8px;
        border: 1px solid #e5e7eb;

        h3 {
            font-size: 0.9rem;
            color: $text-gray;
            margin: 0 0 0.5rem 0;
            font-weight: 600;
        }

        p {
            font-size: 0.95rem;
            color: $text-primary-color;
            margin: 0;
            font-weight: 500;
        }
    }
}

.detail-section {
    margin-bottom: 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid #e5e7eb;

    &:last-child {
        border-bottom: none;
    }

    h2 {
        font-size: 1.75rem;
        color: $text-primary-color;
        margin-bottom: 1.25rem;
        font-weight: 700;
    }

    h3 {
        font-size: 1.25rem;
        color: $text-primary-color;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    p {
        font-size: 1rem;
        line-height: 1.7;
        color: $text-gray;
        margin-bottom: 1rem;
    }

    ul {
        padding-left: 1.5rem;
        
        li {
            font-size: 1rem;
            line-height: 1.8;
            color: $text-gray;
        }
    }
}

.programs-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    .program-item {
        padding: 1.25rem;
        background: #f9fafb;
        border-radius: 8px;
        border-left: 3px solid $primary-color;

        h4 {
            font-size: 1.1rem;
            color: $text-primary-color;
            margin: 0 0 0.5rem 0;
        }

        .program-meta {
            display: flex;
            gap: 1.5rem;
            font-size: 0.9rem;
            color: $text-gray;
        }
    }
}

.requirement-block {
    margin-bottom: 2rem;

    &:last-child {
        margin-bottom: 0;
    }
}

.tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;

    .tag {
        padding: 0.5rem 1rem;
        background: #e0f2fe;
        color: #0369a1;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;

        &.exam-tag {
            background: #fef3c7;
            color: #92400e;
        }
    }
}

.scholarships-list {
    list-style: none;
    padding: 0;

    li {
        padding: 0.75rem 1rem;
        background: #f0fdf4;
        border-left: 3px solid #059669;
        margin-bottom: 0.75rem;
        border-radius: 4px;
        font-weight: 500;
        color: $text-primary-color;
    }
}

/* Sidebar */
.sidebar {
    @media (max-width: 1024px) {
        display: none;
    }
}

.sidebar-sticky {
    position: sticky;
    top: 20px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.sidebar-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1.5rem;

    h3 {
        font-size: 1.15rem;
        color: $text-primary-color;
        margin: 0 0 0.5rem 0;
        font-weight: 700;
    }

    p {
        font-size: 0.9rem;
        color: $text-gray;
        margin: 0 0 1.5rem 0;
    }
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;

    input, select, textarea {
        padding: 0.75rem;
        border: 1px solid #e5e7eb;
        border-radius: 6px;
        font-size: 0.9rem;
        font-family: inherit;

        &:focus {
            outline: none;
            border-color: $primary-color;
        }
    }

    .btn-primary {
        padding: 0.875rem;
        background: $primary-color;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s ease;

        &:hover {
            background: darken($primary-color, 10%);
        }
    }
}

.other-universities {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;

    .university-mini-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        background: #f9fafb;
        border-radius: 6px;
        text-decoration: none;
        color: $text-primary-color;
        transition: all 0.2s ease;

        &:hover {
            background: #f1f5f9;
            transform: translateX(4px);
        }

        img {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
            flex-shrink: 0;
        }

        span {
            font-size: 0.9rem;
            font-weight: 500;
            line-height: 1.3;
        }
    }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector(".contact-form") as HTMLFormElement;
    
    form?.addEventListener("submit", function (e) {
        e.preventDefault();
        alert("Thank you for your inquiry! We'll get back to you soon.");
        if (form) form.reset();
    });
});
</script>
