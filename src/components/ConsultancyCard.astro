---
interface Props {
  consultancy: {
    name: string;
    slug: string;
    location: string;
    services: string[];
    rating: number;
    countries: string[];
    description: string;
    image_url: string;
    established?: number;
    successful_cases?: number;
  };
}

const { consultancy } = Astro.props;
---

<article class="consultancy-card">
  <div class="consultancy-card__image">
    <img src={consultancy.image_url} alt={consultancy.name} loading="lazy" />
    <div class="consultancy-card__badge">
      <span class="rating">â˜… {consultancy.rating}</span>
    </div>
  </div>
  
  <div class="consultancy-card__content">
    <h3 class="consultancy-card__title">
      <a href={`/consultancies/${consultancy.slug}`}>{consultancy.name}</a>
    </h3>
    
    <div class="consultancy-card__location">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
        <circle cx="12" cy="10" r="3"></circle>
      </svg>
      <span>{consultancy.location}</span>
    </div>
    
    <p class="consultancy-card__description">{consultancy.description}</p>
    
    <div class="consultancy-card__countries">
      <strong>Specializes in:</strong>
      <div class="country-tags">
        {consultancy.countries.slice(0, 3).map(country => (
          <span class="tag">{country}</span>
        ))}
        {consultancy.countries.length > 3 && (
          <span class="tag-more">+{consultancy.countries.length - 3} more</span>
        )}
      </div>
    </div>
    
    <div class="consultancy-card__stats">
      {consultancy.established && (
        <div class="stat">
          <span class="stat-label">Est.</span>
          <span class="stat-value">{consultancy.established}</span>
        </div>
      )}
      {consultancy.successful_cases && (
        <div class="stat">
          <span class="stat-label">Success Cases</span>
          <span class="stat-value">{consultancy.successful_cases}+</span>
        </div>
      )}
    </div>
    
    <a href={`/consultancies/${consultancy.slug}`} class="consultancy-card__btn">
      Learn More
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>

<style lang="scss">
@use '../styles/variables' as *;

.consultancy-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;

  &:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  &__image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    &:hover img {
      transform: scale(1.05);
    }
  }

  &__badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: rgba(255, 255, 255, 0.95);
    padding: 4px 12px;
    border-radius: 20px;
    font-weight: 600;

    .rating {
      color: #f59e0b;
      font-size: 0.9rem;
    }
  }

  &__content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  &__title {
    font-size: 1.25rem;
    margin: 0;
    
    a {
      color: $text-primary-color;
      text-decoration: none;
      transition: color 0.2s;
      
      &:hover {
        color: $primary-color;
      }
    }
  }

  &__location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: $text-gray;
    font-size: 0.9rem;

    svg {
      flex-shrink: 0;
    }
  }

  &__description {
    color: $text-gray;
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  &__countries {
    strong {
      display: block;
      font-size: 0.85rem;
      margin-bottom: 0.5rem;
      color: $text-primary-color;
    }

    .country-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag-more {
      font-size: 0.85rem;
      color: $primary-color;
      font-weight: 500;
    }
  }

  &__stats {
    display: flex;
    gap: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid $border-light;

    .stat {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;

      &-label {
        font-size: 0.75rem;
        color: $text-gray;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      &-value {
        font-size: 1rem;
        font-weight: 600;
        color: $text-primary-color;
      }
    }
  }

  &__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: $primary-color;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    transition: background 0.2s;
    margin-top: auto;

    svg {
      transition: transform 0.2s;
    }

    &:hover {
      background: darken($primary-color, 10%);
      
      svg {
        transform: translateX(4px);
      }
    }
  }
}
</style>
