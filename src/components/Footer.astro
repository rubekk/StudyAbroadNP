<style lang="scss">
@use '../styles/variables' as *;

.footer {
    background: $text-primary-color;
    color: rgba(255, 255, 255, 0.8);
    padding: 4rem 0 0;
    margin-top: auto;
}

.footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 3rem);
}

.footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 3rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);

    @media (max-width: 1024px) {
        grid-template-columns: 1fr 1fr;
        gap: 2.5rem;
    }

    @media (max-width: 640px) {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
}

.footer-column {
    h4 {
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1.25rem;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;

        li {
            a {
                color: rgba(255, 255, 255, 0.7);
                text-decoration: none;
                font-size: 0.95rem;
                transition: color 0.2s ease, padding-left 0.2s ease;
                display: inline-block;

                &:hover {
                    color: white;
                    padding-left: 0.25rem;
                }
            }
        }
    }
}

.about-column {
    .footer-logo {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1rem;
    }

    .footer-description {
        font-size: 0.95rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
    }
}

.social-links {
    display: flex;
    gap: 1rem;

    a {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: all 0.2s ease;

        &:hover {
            background: $primary-color;
            color: white;
            transform: translateY(-3px);
        }
    }
}

.footer-bottom {
    padding: 2rem 0;
    text-align: center;

    p {
        margin: 0.25rem 0;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);

        strong {
            color: white;
            font-weight: 600;
        }
    }
}

@media (max-width: 640px) {
    .footer {
        padding: 3rem 0 0;
    }

    .footer-content {
        padding-bottom: 2rem;
    }

    .about-column .footer-logo {
        font-size: 1.25rem;
    }

    .footer-column h4 {
        font-size: 1rem;
    }
}
</style>
