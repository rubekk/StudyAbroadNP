---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import type { UniversityCard } from "@/lib/types/university";
import { routes } from "@/lib/routes";

const { universityCardData } = Astro.props as {
  universityCardData: UniversityCard;
};
---

<div class="card university">
  <div class="img">
    <Image
      src={universityCardData.image_url}
      alt=""
      inferSize={true}
      width={100}
      height={100}
    />
  </div>

  <div class="text">
    <h3 class="name">
      <a href={routes.UNIVERSITIES + "/" + universityCardData.slug}
        >{universityCardData.name}</a
      >
    </h3>

    <div class="text-btm">
      <div class="location">
        <Icon name="mapDot" />
        <span>{universityCardData.city}, {universityCardData.country}</span>
      </div>

      <div class="fee">
        <Icon name="cash" />
        <span
          >{universityCardData.min_fee} lakhs - {universityCardData.max_fee} lakhs</span
        >
      </div>

      <div class="time">
        <Icon name="clock" />
        <span>3 years - 4 years</span>
      </div>
    </div>
  </div>
</div>
