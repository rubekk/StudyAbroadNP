---
import { routes } from "@/lib/routes";
import ViewDetailButton from "./../../common/button/ViewDetailButton.astro";

interface Props {
  name: string;
  location: string;
  slug: string;
  image_url: string;
  countries: string[];
}

const { name, location, slug, image_url, countries } = Astro.props;
---

<div class="card consultancy">
  <div class="img">
    <img src={image_url} alt={name} />
  </div>

  <div class="text">
    <h3 class="name">
      <a href={`${routes.CONSULTANCIES}/${slug}`}>{name}</a>
    </h3>

    <div class="text-btm">
      <div class="country-badges">
        {countries.map((country) => <span class="badge">{country}</span>)}
      </div>

      <ViewDetailButton url={`${routes.CONSULTANCIES}/${slug}`} />
    </div>
  </div>
</div>

<style lang="scss">
  @use "../../../styles/variables" as *;

  .card.consultancy {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    gap: 1rem;
    padding: 1rem;
    align-items: flex-start;

    &:hover {
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
      transform: translateY(-2px);
    }
  }

  .img {
    flex-shrink: 0;
    width: 100px;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .card.consultancy:hover & img {
      transform: scale(1.05);
    }
  }

  .text {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    min-width: 0;
  }

  .name {
    font-size: 1.1rem;
    margin: 0;
    color: $text-primary-color;
    font-weight: 600;
    line-height: 1.3;

    a {
      color: inherit;
      text-decoration: none;
      transition: color 0.3s ease;

      &:hover {
        color: $primary-color;
      }
    }
  }

  .text-btm {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .country-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.6rem;
    background: #e0f2fe;
    color: #0369a1;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .view-details {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: $primary-color;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    margin-top: auto;
    transition: gap 0.3s ease;

    &:hover {
      gap: 0.75rem;
    }

    svg {
      transition: transform 0.3s ease;
    }

    &:hover svg {
      transform: translateX(4px);
    }
  }

  @media (max-width: 768px) {
    .card.consultancy {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 1.25rem;
    }

    .img {
      width: 120px;
      height: 120px;
    }

    .text {
      width: 100%;
    }

    .text-btm {
      align-items: center;
    }

    .country-badges {
      justify-content: center;
    }
  }
</style>
