<section class="hero" aria-label="Study abroad university explorer">
  <!-- Background image with gradient overlay -->
  <div class="hero-background">
    <div class="overlay"></div>
  </div>

  <!-- Hero content container -->
  <div class="hero-content">
    <!-- Main heading with animated gradient text -->
    <h1 class="hero-heading">
      <span class="hero-text-gradient">Explore World-Class Universities</span>
      <span class="hero-text-sub">For Your Global Education Journey</span>
    </h1>

    <!-- Search/CTA section -->
    <div class="hero-actions">
      <div class="search-container">
        <input
          type="text"
          placeholder="Search universities, programs or countries..."
          aria-label="Search universities"
          class="search-input"
        />
        <button class="search-button" aria-label="Search">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
        </button>
      </div>

      <div class="cta-buttons">
        <a href="/universities" class="cta-primary">
          Browse Universities
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="/consultation" class="cta-secondary"> Free Consultation </a>
      </div>
    </div>
  </div>

  <script>
    // Animate stats counting
    document.addEventListener("DOMContentLoaded", () => {
      const statNumbers = document.querySelectorAll(".stat-number");

      const animateCount = (element: Element, target: number) => {
        const duration = 2000;
        const start = 0;
        const increment = target / (duration / 16);
        let current = start;

        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            element.textContent = String(target);
            clearInterval(timer);
          } else {
            element.textContent = String(Math.floor(current));
          }
        }, 16);
      };

      statNumbers.forEach((stat) => {
        const target = parseInt(stat.getAttribute("data-count") ?? "");
        animateCount(stat, target);
      });
    });
  </script>
</section>
