---
interface Props {
  course: {
    name: string;
    slug: string;
    field: string;
    degree: string;
    duration: string;
    countries: string[];
    description: string;
    average_tuition: string;
    image_url: string;
  };
}

const { course } = Astro.props;
---

<article class="course-card">
  <div class="card-image">
    <img src={course.image_url} alt={course.name} loading="lazy" />
  </div>
  
  <div class="card-content">
    <div class="card-meta">
      <span class="degree-badge">{course.degree}</span>
      <span class="duration">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        {course.duration}
      </span>
    </div>
    
    <h3>{course.name}</h3>
    
    <p class="description">{course.description}</p>
    
    <div class="tuition">
      <span class="tuition-label">Average Tuition</span>
      <span class="tuition-value">{course.average_tuition}</span>
    </div>
    
    <a href={`/courses/${course.slug}`} class="view-details">
      View Details
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>

<style lang="scss">
@use '../styles/variables' as *;
@use 'sass:color';

.course-card {
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;

  &:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }
}

.card-image {
  position: relative;
  width: 100%;
  height: 160px;
  overflow: hidden;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .course-card:hover & img {
    transform: scale(1.05);
  }
}

.card-content {
  padding: 1.25rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
  flex: 1;

  h3 {
    font-size: 1.15rem;
    margin: 0;
    color: $text-primary-color;
    line-height: 1.4;
  }
}

.card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
}

.degree-badge {
  font-size: 0.85rem;
  padding: 0.3rem 0.8rem;
  background: #e0f2fe;
  color: $primary-color;
  border-radius: 4px;
  font-weight: 600;
}

.duration {
  display: flex;
  align-items: center;
  gap: 0.3rem;
  font-size: 0.9rem;
  color: $text-gray;

  svg {
    flex-shrink: 0;
  }
}

.description {
  color: $text-gray;
  font-size: 0.9rem;
  line-height: 1.5;
  margin: 0;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.tuition {
  padding: 0.75rem;
  background: #f9fafb;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;

  .tuition-label {
    font-size: 0.85rem;
    color: $text-gray;
  }

  .tuition-value {
    font-size: 1.1rem;
    font-weight: 700;
    color: $text-primary-color;
  }
}

.view-details {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: $primary-color;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.95rem;
  margin-top: auto;
  transition: gap 0.3s ease;

  &:hover {
    gap: 0.75rem;
  }

  svg {
    transition: transform 0.3s ease;
  }

  &:hover svg {
    transform: translateX(4px);
  }
}

@media (max-width: 768px) {
  .card-image {
    height: 180px;
  }

  .card-content {
    padding: 1.25rem;

    h3 {
      font-size: 1.1rem;
    }
  }
}
</style>
