---
const { page } = Astro.props as {
    page: {
        parent: string;
        child: string | null;
    };
};
---

<nav class="breadcrumb" aria-label="Breadcrumb">
    <ol>
        <li><a href="/">Home</a></li>
        {
            page.child ? (
                <>
                    <li>
                        <a href={"/" + page.parent.toLowerCase()}>
                            {page.parent}
                        </a>
                    </li>
                    <li aria-current="page">{page.child}</li>
                </>
            ) : (
                <li aria-current="page">{page.parent}</li>
            )
        }
    </ol>
</nav>
