---
interface Props {
  title: string;
  description?: string;
}
const { title, description } = Astro.props as Props;
---
<section class="list-hero">
  <div class="content-container">
    <div class="list-hero__inner">
      <h1 class="list-hero__title">{title}</h1>
      {description && (
        <p class="list-hero__desc">{description}</p>
      )}
    </div>
  </div>
</section>

<style lang="scss">
@use "../../styles/variables" as *;

.list-hero {
  background: #f8fafc;
  border-bottom: 1px solid $border-light;
}

.list-hero__inner {
  padding: 2.5rem 0;
}

.list-hero__title {
  margin: 0;
  font-size: clamp(1.5rem, 3.5vw, 2rem);
  font-weight: 800;
  color: $text-primary-color;
}

.list-hero__desc {
  margin-top: 0.5rem;
  max-width: 70ch;
  color: $text-gray;
  font-size: 1rem;
}

/* Ensure consistent horizontal padding even if page lacks .content-container */
.list-hero .content-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 clamp(1rem, 4vw, 3rem);
}
</style>
